# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/codeshare
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRATION=86400000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BOOTSTRAP=localhost:9092

# AWS S3 Configuration (optional)
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
S3_ENABLED=false
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Security Configuration
FRONTEND_ORIGIN=http://localhost:3000
COOKIE_SECURE=false

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=local
DDL_AUTO=update
FLYWAY_ENABLED=true

# Frontend Environment Variables
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws/editor
NEXT_PUBLIC_YJS_WS_URL=ws://localhost:8080/ws/yjs

# Production Environment Variables (set these in your production environment)
# DB_URL=jdbc:postgresql://your-production-db:5432/codeshare
# DB_USER=your_production_db_user
# DB_PASSWORD=your_production_db_password
# JWT_SECRET=your_production_jwt_secret
# FRONTEND_ORIGIN=https://your-frontend-domain.com
# COOKIE_SECURE=true
# S3_ENABLED=true
